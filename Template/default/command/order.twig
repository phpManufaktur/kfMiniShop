{% spaceless %}
<!-- {{ _self.getTemplateName() }} -->
<div id="minishop">
  <div class="container-fluid">    
    
    <h1>{{ 'Order'|trans }}</h1>  
    
    {{ alert }}
    
    <a href="{{ permalink_base_url ~ '/basket' }}" class="btn btn-default" role="button"><i class="fa fa-arrow-circle-left"></i> {{ 'Back to the shopping basket'|trans }}</a>
    
    {# show a summary of the basket content #}
    {% include '@phpManufaktur/miniShop/Template/default/command/include/summary.basket.twig' %}  
    
    {# assign the bootstrap 3 theming for horizontal forms to the Symfony Form Factory output #}  
    {% form_theme form '@phpManufaktur/Contact/Template/default/pattern/form.fields.horizontal.twig' %}
    
    <form action="{{ permalink_base_url ~ '/order' }}" class="form-horizontal" method="post" role="form">
      {{ form_rest(form) }}   
      <div class="row">
        <div class="col-sm-9 col-sm-offset-3">
      <a href="{{ permalink_base_url ~ '/basket' }}" class="btn btn-default" role="button">{{ 'Abort'|trans }}</a>&nbsp;
      <button class="btn btn-default pull-right" type="submit">{% if form.form_action.vars.value == 'check_contact' %}{{ 'Order now'|trans }}{% else %}{{ 'Next step'|trans }} <i class="fa fa-arrow-circle-right"></i>{% endif %}</button>
        </div>
      </div>
    </form>
    
  </div>
</div>
{% endspaceless %}